<% if logged_in? %>

  <p>ログイン完了ユーザ: 
    <%= current_user.name %>
  </p>
  
  <h1>タスク一覧</h1>
  <% if @tasks.any? %>
  
    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>タスク内容</th>
          <th>状態</th>
        </tr>
      </thead>
      <tbody>
        
      <% @tasks.each do |tasks| %>
        <tr>
          <!--タスクid-->
          <td><%= link_to tasks.id, task_path(tasks) %></td>
          <!--タスク-->
          <td><%= tasks.content %></td>
          <td><%= tasks.status %></td>
        </tr>
      <% end %>
  
      </tbody>
    </table>
    <div>
      <%= paginate @tasks %>
    </div>
  
  <% end %>
  <%= link_to'新規タスク作成', new_task_path, class: "btn btn-primary"%>
  
<% else %>

  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Tasklist</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
  
<% end %>