<%= form_for(task) do |f| %>
<% if task.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% task.errors.full_messages.each do |task|%>
        <li><%= task %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  <p>
    <%= f.label :content, 'タスク内容' %>
    <%= f.text_field :content %> 
  </p>
  <p>
    <%= f.label :status, '進行状況' %>
    <%= f.select :status, [['OK','OK'],['NG','NG']], :prompt =>'選択' %> 
  </p>
  <%= f.submit '作成' %>
<% end %>