<div class="form-horizontal">
  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
    
    <!--バリデーション-->
    <%= form_for(task) do |f| %>
      <% if task.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% task.errors.full_messages.each do |task|%>
              <li><%= task %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="form-group">
        <div class="col-xs-12">
          <%= f.label :content, 'タスク内容' %>
          <%= f.text_field :content , class:'form-control'%> 
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-4">
          <%= f.label :status, '進行状況' %>
          <%= f.select :status, {"OK" => "OK", "NG" => "NG"}, {:prompt =>'選択'}, {:class => "form-control"} %>
        </div>
      </div>
      
      <%= f.submit '作成', class: 'btn btn-primary'%>
    
    <% end %>

  </div>
</div>